<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="utf-8" />
    <title>FinNex - Maliyyə Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    @RenderSection("Styles", required: false)


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fin-navbar fixed-top shadow-sm">
            <div class="container-fluid px-4">

                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center gap-2 fw-bold"
                   asp-controller="Home" asp-action="Index">
                    <i class="bi bi-bank2 fs-4"></i>
                    <span>FinNex</span>
                </a>

                <!-- Mobile toggle -->
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <!-- Menu -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto gap-2 align-items-lg-center">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Bank" asp-action="Index">
                                <i class="bi bi-building"></i> Banklar
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Musteri" asp-action="Index">
                                <i class="bi bi-people"></i> Müştərilər
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                               href="#"
                               role="button"
                               data-bs-toggle="dropdown">
                                <i class="bi bi-arrow-left-right"></i> Swift
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end fin-dropdown shadow">

                                <li class="fin-dropdown-title">
                                    Əməliyyatlar
                                </li>

                                <li>
                                    <a class="dropdown-item fin-action-primary"
                                       asp-controller="OdenisTapsirigi"
                                       asp-action="Create">
                                        <i class="bi bi-plus-lg"></i>
                                        Ödəniş tapşırığı
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="OdenisTapsirigi"
                                       asp-action="Index">
                                        <i class="bi bi-list-ul"></i>
                                        Ödəniş tapşırıqları
                                    </a>
                                </li>
                            </ul>

                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


</body>
</html>