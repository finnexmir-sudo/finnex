@model IEnumerable<FinNex.Domain.Entities.Structure.Department>

<div class="container bank-container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-diagram-3 me-2"></i>Departamentlər</h2>
            <p class="text-muted">Bank struktur bölmələrinin siyahısı</p>
        </div>

        <a asp-action="Yarat" class="btn btn-primary rounded-pill">
            <i class="bi bi-plus-circle me-1"></i> Yeni Departament
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <table class="table table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Ad</th>
                    <th>Açıqlama</th>
                    <th>Status</th>
                    <th class="text-end">Əməliyyat</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model)
                {
                    <tr>
                        <td class="fw-bold">@d.Ad</td>
                        <td>@d.Aciqlama</td>
                        <td>
                            <span class="badge bg-@(d.Silinib  ? "success" : "secondary")">
                                @(d.Silinib ? "Aktiv" : "Passiv")
                            </span>
                        </td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-warning">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
